<%= form_for(@user, html:{ class: "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :emp_id, class: "col-sm-3 control-label" %>
    <div class="col-sm-3">
      <% if controller.action_name == "edit" %>
        <%= f.text_field :emp_id, class: "form-control", required: true, placeholder: "社員CD", disabled: true %>
      <% else %>
        <%= f.text_field :emp_id, class: "form-control", required: true, placeholder: "社員CD" %>
      <% end %>
    </div>
    <div class="col-md-offset-3 col-sm-6">
      <p class="help-block">半角数字1~8桁で入力</p>
    </div>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :jigyosho_id %><br>
    <%= f.text_field :jigyosho_id %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br>
    <%= f.number_field :birthday %>
  </div>
  <div class="field">
    <%= f.label :phone1 %><br>
    <%= f.text_field :phone1 %>
  </div>
  <div class="field">
    <%= f.label :phone2 %><br>
    <%= f.text_field :phone2 %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :other %><br>
